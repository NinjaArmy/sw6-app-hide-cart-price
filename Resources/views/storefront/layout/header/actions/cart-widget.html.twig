{% sw_extends '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}

{% block layout_header_actions_cart_widget %}
	{{parent()}}
	{% if page.cart.lineItems|length > 0 and not config('NINJAHideCartPriceApp.config.SquaredIcon')%}
		<span style="background-color: {{config('NINJAHideCartPriceApp.config.BadgeColor')}}; color: {{config('NINJAHideCartPriceApp.config.TextColor')}}" class="badge badge-primary header-cart-badge">{{ page.cart.lineItems|length }}</span>

	{% elseif  page.cart.lineItems|length > 0 and config('NINJAHideCartPriceApp.config.SquaredIcon') %}
		<span style="border-radius: 0; background-color: {{config('NINJAHideCartPriceApp.config.BadgeColor')}}; color: {{config('NINJAHideCartPriceApp.config.TextColor')}}" class="badge badge-primary header-cart-badge">{{ page.cart.lineItems|length }}</span>
	{% endif %}
{% endblock %}
